{
  "builders": [
    {
      "boot_wait": "10s",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_additions_url": "{{user `guest_additions_url`}}",
      "headless": "{{user `headless`}}",
      "output_directory": "{{user `build_directory`}}/{{user `box_basename`}}",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/halt -h -p",
      "source_path": "{{template_dir}}/../../../artifacts/centos/base-desktop-centos77/base-desktop-centos77.ovf",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "10000s",
      "ssh_username": "vagrant",
      "type": "virtualbox-ovf",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"],
        ["modifyvm", "{{.Name}}", "--vram", "{{user `vram`}}"],
        ["modifyvm", "{{.Name}}", "--clipboard-mode", "bidirectional"],
        ["modifyvm", "{{.Name}}", "--draganddrop", "bidirectional"],
        ["modifyvm", "{{.Name}}", "--description", "{{user `vm_description`}}"],
        ["setextradata", "{{.Name}}", "GUI/ScaleFactor", "1.75"]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{user `box_basename`}}"
    }
  ],
  "post-processors": [
    {
      "output": "{{user `build_directory`}}/{{user `box_basename`}}/{{user `box_basename`}}.{{.Provider}}.box",
      "type": "vagrant"
    },
    {
      "output": "{{user `build_directory`}}/manifest.json",
      "type": "manifest"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "sudo mkdir -p {{user `devops_home`}}/provisioners/scripts",
        "sudo chown -R vagrant:vagrant {{user `devops_home`}}"
      ],
      "type": "shell"
    },
    {
      "destination": "{{user `devops_home`}}/provisioners/scripts",
      "source": "{{template_dir}}/../../../provisioners/scripts/",
      "type": "file"
    },
    {
      "inline": ["sudo chown -R root:root {{user `devops_home`}}"],
      "type": "shell"
    },
    {
      "expect_disconnect": true,
      "inline": [
        "sudo yum -y update",
        "sudo hostnamectl set-hostname dev --static",
        "sudo hostnamectl set-hostname dev",
        "sudo hostnamectl status",
        "sudo systemctl reboot"
      ],
      "type": "shell"
    },
    {
      "environment_vars": [
        "appd_username={{user `appd_username`}}",
        "appd_password={{user `appd_password`}}",
        "appd_controller_root_password={{user `appd_controller_root_password`}}",
        "appd_java_agent_config={{user `appd_java_agent_config`}}",
        "appd_java_agent_controller_host={{user `appd_java_agent_controller_host`}}",
        "appd_java_agent_controller_port={{user `appd_java_agent_controller_port`}}",
        "appd_java_agent_application_name={{user `appd_java_agent_application_name`}}",
        "appd_java_agent_tier_name={{user `appd_java_agent_tier_name`}}",
        "appd_java_agent_node_name={{user `appd_java_agent_node_name`}}",
        "appd_java_agent_account_name={{user `appd_java_agent_account_name`}}",
        "appd_java_agent_account_access_key={{user `appd_java_agent_account_access_key`}}",
        "appd_machine_agent_config={{user `appd_machine_agent_config`}}",
        "appd_machine_agent_controller_host={{user `appd_machine_agent_controller_host`}}",
        "appd_machine_agent_controller_port={{user `appd_machine_agent_controller_port`}}",
        "appd_machine_agent_sim_enabled={{user `appd_machine_agent_sim_enabled`}}",
        "appd_machine_agent_account_name={{user `appd_machine_agent_account_name`}}",
        "appd_machine_agent_account_access_key={{user `appd_machine_agent_account_access_key`}}",
        "appd_machine_agent_java_opts={{user `appd_machine_agent_java_opts`}}",
        "appd_machine_agent_application_name={{user `appd_machine_agent_application_name`}}",
        "appd_machine_agent_tier_name={{user `appd_machine_agent_tier_name`}}",
        "appd_machine_agent_node_name={{user `appd_machine_agent_node_name`}}",
        "devops_home={{user `devops_home`}}",
        "user_name=vagrant",
        "HOME_DIR=/home/vagrant",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "pause_before": "120s",
      "scripts": [
        "{{template_dir}}/../../../provisioners/scripts/common/install_apache_ant.sh",
        "{{template_dir}}/../../../provisioners/scripts/common/install_apache_maven.sh",
        "{{template_dir}}/../../../provisioners/scripts/common/install_apache_groovy.sh",
        "{{template_dir}}/../../../provisioners/scripts/common/install_gradle.sh",
        "{{template_dir}}/../../../provisioners/scripts/centos/install_centos7_google_postman.sh",
        "{{template_dir}}/../../../provisioners/scripts/centos/install_centos7_ansible.sh",
        "{{template_dir}}/../../../provisioners/scripts/common/install_google_golang.sh",
        "{{template_dir}}/../../../provisioners/scripts/common/install_scala_lang.sh",
        "{{template_dir}}/../../../provisioners/scripts/common/install_scala_sbt.sh",
        "{{template_dir}}/../../../provisioners/scripts/common/install_aws_corretto_java_jdk_11.sh",
        "{{template_dir}}/../../../provisioners/scripts/common/install_oracle_java_jdk_13.sh",
        "{{template_dir}}/../../../provisioners/scripts/common/install_oracle_java_jdk_14.sh",
        "{{template_dir}}/../../../provisioners/scripts/common/install_jmespath_jp_json_processor.sh",
        "{{template_dir}}/../../../provisioners/scripts/common/install_jq_json_processor.sh",
        "{{template_dir}}/../../../provisioners/scripts/centos/install_centos7_xmlstarlet_xml_processor.sh",
        "{{template_dir}}/../../../provisioners/scripts/common/install_hashicorp_consul.sh",
        "{{template_dir}}/../../../provisioners/scripts/common/install_hashicorp_packer.sh",
        "{{template_dir}}/../../../provisioners/scripts/common/install_hashicorp_terraform.sh",
        "{{template_dir}}/../../../provisioners/scripts/common/install_hashicorp_vault.sh",
        "{{template_dir}}/../../../provisioners/scripts/centos/install_centos7_git.sh",
        "{{template_dir}}/../../../provisioners/scripts/common/install_git_flow.sh",
        "{{template_dir}}/../../../provisioners/scripts/centos/install_centos7_apache_tomcat_7.sh",
        "{{template_dir}}/../../../provisioners/scripts/common/install_appdynamics_java_agent.sh",
        "{{template_dir}}/../../../provisioners/scripts/centos/install_centos7_appdynamics_machine_agent.sh",
        "{{template_dir}}/../../../provisioners/scripts/centos/install_centos7_atom_editor.sh",
        "{{template_dir}}/../../../provisioners/scripts/centos/install_centos7_jetbrains_intellij_idea_ultimate_edition.sh",
        "{{template_dir}}/../../../provisioners/scripts/centos/install_centos7_jetbrains_webstorm_javascript_ide.sh",
        "{{template_dir}}/../../../provisioners/scripts/centos/install_centos7_spring_tool_suite_eclipse_ide.sh",
        "{{template_dir}}/../../../provisioners/scripts/centos/install_centos7_sublime_text_editor.sh",
        "{{template_dir}}/../../../provisioners/scripts/centos/install_centos7_microsoft_visual_studio_code_editor.sh",
        "{{template_dir}}/../../../provisioners/scripts/centos/install_centos7_desktop_root_user_env.sh",
        "{{template_dir}}/../../../provisioners/scripts/centos/install_centos7_desktop_user_env.sh",
        "{{template_dir}}/../../../provisioners/scripts/centos/cleanup.sh",
        "{{template_dir}}/../../../submodules/chef/bento/packer_templates/_common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "appd_username": "{{env `appd_username`}}",
    "appd_password": "{{env `appd_password`}}",
    "appd_controller_root_password": "{{env `appd_controller_root_password`}}",
    "appd_java_agent_config": "{{env `appd_java_agent_config`}}",
    "appd_java_agent_controller_host": "{{env `appd_java_agent_controller_host`}}",
    "appd_java_agent_controller_port": "{{env `appd_java_agent_controller_port`}}",
    "appd_java_agent_application_name": "{{env `appd_java_agent_application_name`}}",
    "appd_java_agent_tier_name": "{{env `appd_java_agent_tier_name`}}",
    "appd_java_agent_node_name": "{{env `appd_java_agent_node_name`}}",
    "appd_java_agent_account_name": "{{env `appd_java_agent_account_name`}}",
    "appd_java_agent_account_access_key": "{{env `appd_java_agent_account_access_key`}}",
    "appd_machine_agent_config": "{{env `appd_machine_agent_config`}}",
    "appd_machine_agent_controller_host": "{{env `appd_machine_agent_controller_host`}}",
    "appd_machine_agent_controller_port": "{{env `appd_machine_agent_controller_port`}}",
    "appd_machine_agent_sim_enabled": "{{env `appd_machine_agent_sim_enabled`}}",
    "appd_machine_agent_account_name": "{{env `appd_machine_agent_account_name`}}",
    "appd_machine_agent_account_access_key": "{{env `appd_machine_agent_account_access_key`}}",
    "appd_machine_agent_java_opts": "{{env `appd_machine_agent_java_opts`}}",
    "appd_machine_agent_application_name": "{{env `appd_machine_agent_application_name`}}",
    "appd_machine_agent_tier_name": "{{env `appd_machine_agent_tier_name`}}",
    "appd_machine_agent_node_name": "{{env `appd_machine_agent_node_name`}}",
    "box_basename": "dev-centos77",
    "build_directory": "../../../artifacts/centos",
    "build_timestamp": "{{isotime \"20060102150405\"}}",
    "cpus": "2",
    "devops_home": "/opt/devops-2.0",
    "git_revision": "__unknown_git_revision__",
    "guest_additions_url": "",
    "headless": "false",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "memory": "6144",
    "name": "dev-centos77",
    "no_proxy": "{{env `no_proxy`}}",
    "version": "TIMESTAMP",
    "vm_description": "Centos Linux 7.7 VM image for DevOps 2.0 '{{user `box_basename`}}' desktop box.",
    "vram": "256"
  }
}
